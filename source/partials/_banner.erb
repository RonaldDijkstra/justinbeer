<header class="banner <%= variant %> <%= locals[:variant_overlay] %>" role="banner" style="background-image: url(<%= image_path(locals[:background_image] || "banner-default.jpg") %>)">

  <% if locals[:title] || locals[:text] || (locals[:button_link] && locals[:button_text]) %>
    <div class="grid-row">

      <% if locals[:title] %>
        <%= content_tag title_tag ||= :h1, class: "title" do title end %>
      <% end %>

      <% if locals[:text] %>
        <p class="text">
          <%= text %>
        </p>
      <% end %>

      <% if locals[:button_link] && locals[:button_text] %>
        <%= partial "partials/button", locals: { to: button_link,
                                                 text: button_text,
                                                 variant: button_variant } %>
      <% end %>


      <% if locals[:discount] && lang == :nl %>
        <div class="discount">
          <strong>Bierfestival Groningen actie!</strong><br>
           Van donderdag 4 april t/m zondag 7 april<br><br>
           <strong>6 halen, 5 betalen</strong><br><br>
           Geldig op al het Nederlandse bier op vertoon van je toegangskaart voor Bierfestival Groningen!
         </div>
       <% end %>

    </div>
  <% end %>
</header>
